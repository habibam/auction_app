@model Auctions.Models.RegisterUser

<h1>Register</h1>


<form asp-controller="User" asp-action="CreateUser" method="POST">
    <div class="form horiz">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName">
    </div>
    <span class="error right" asp-validation-for="FirstName"></span><br>

    <div class="form horiz">
        <label asp-for="LastName"></label>
        <input asp-for="LastName">
    </div>
    <span class="error right" asp-validation-for="LastName"></span><br>

    <div class="form horiz">
        <label asp-for="Username"></label>
        <input asp-for="Username">
    </div>
    @if(ViewBag.InvalidUsername == true){
        <label class="error right" for="Username">Username already registered.</label>
    }
    <span class="error right" asp-validation-for="Username"></span><br>

    <div class="form horiz">
        <label asp-for="Password"></label>
        <input asp-for="Password">
    </div>
    <span class="error right" asp-validation-for="Password"></span><br>

    <div class="form horiz">
        <label asp-for="C_Password"></label>
        <input asp-for="C_Password">
    </div>
    <span class="error right" asp-validation-for="C_Password"></span><br>

    <input type="submit" value="Register" class="btn btn-primary">
</form>